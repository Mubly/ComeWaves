<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mubly.comewaves">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".common.CrossApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_App"
        tools:replace="android:theme">
        <activity android:name=".view.activity.SettingActivity"></activity>
        <activity android:name=".view.activity.CommentActivity" />
        <activity android:name=".view.activity.IsHadInfoActivity" />
        <activity android:name=".view.activity.MerchantActivity" />
        <activity android:name=".view.activity.GoodsInfoActivity" />
        <activity android:name=".view.activity.SearchInfoActivity" />
        <activity android:name=".view.activity.ReleaseActivity" />
        <activity
            android:name=".view.activity.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/splash_theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".view.activity.MainActivity" />
        <activity android:name=".view.activity.BaseActivity" />

        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />
    </application>

</manifest>