<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_343434">

    <com.youth.banner.Banner
        android:id="@+id/hot_label_item_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        app:layout_constraintDimensionRatio="375:135"
        app:layout_constraintTop_toTopOf="parent">

    </com.youth.banner.Banner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/fire_icon"
        android:drawablePadding="@dimen/size_4dp"
        android:gravity="bottom"
        android:paddingLeft="@dimen/size_20dp"
        android:text="375y8"
        android:textColor="@color/white"
        android:textSize="@dimen/size_10dp"
        app:layout_constraintBottom_toBottomOf="@id/hot_label_item_banner"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="+45去过"
        android:paddingRight="@dimen/size_20dp"
        android:textSize="@dimen/size_12dp"
        app:layout_constraintBottom_toBottomOf="@id/hot_label_item_banner"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/hot_label_item_storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_20dp"
        android:paddingTop="@dimen/size_8dp"
        android:paddingBottom="@dimen/size_8dp"
        android:textColor="@color/color_f5f5f5"
        android:textSize="@dimen/size_14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hot_label_item_banner"
        android:text="幸福西饼小店" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/local_white_icon"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/size_20dp"
        android:textColor="@color/color_f5f5f5"
        android:textSize="@dimen/size_10dp"
        app:layout_constraintBottom_toBottomOf="@id/hot_label_item_storename"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/hot_label_item_storename"
        android:text="江桥万达 1.5km" />
</android.support.constraint.ConstraintLayout>
