<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_top_layout"></include>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mubly.comewaves.videoplayer.SwitchVideo
                    android:id="@+id/detail_player"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_10dp"
                    android:paddingRight="@dimen/size_20dp"
                    app:layout_constraintTop_toBottomOf="@id/detail_player">

                    <ImageView
                        android:id="@+id/user_avtar_iv"
                        android:layout_width="@dimen/size_46dp"
                        android:layout_height="@dimen/size_46dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ishad_1" />

                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:text="阿瑞斯·宙斯"
                        android:textColor="@color/color_262628"
                        android:textSize="@dimen/size_12dp"
                        app:layout_constraintBottom_toTopOf="@id/user_address_tv"
                        app:layout_constraintLeft_toRightOf="@id/user_avtar_iv"
                        app:layout_constraintTop_toTopOf="@id/user_avtar_iv"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/user_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:drawableLeft="@drawable/local_icon"
                        android:drawablePadding="@dimen/size_4dp"
                        android:gravity="center_vertical"
                        android:text="阿瑞斯·宙斯"
                        android:textColor="@color/color_435986"
                        android:textSize="@dimen/size_10dp"
                        app:layout_constraintBottom_toBottomOf="@id/user_avtar_iv"
                        app:layout_constraintLeft_toRightOf="@id/user_avtar_iv"
                        app:layout_constraintTop_toBottomOf="@id/user_name_tv"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/to_attention_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_gray_square_radious_strok_10"
                        android:text="+关注"
                        app:layout_constraintBottom_toBottomOf="@id/user_avtar_iv"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/user_avtar_iv" />

                    <TextView
                        android:id="@+id/video_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:text="阿瓦那·龙，终将称霸世界"
                        android:textColor="@color/color_262628"
                        android:textSize="@dimen/size_12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/user_avtar_iv" />

                    <LinearLayout
                        android:id="@+id/praise_comment_attent_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/size_14dp"
                        app:layout_constraintTop_toBottomOf="@id/video_content_tv">

                        <TextView
                            android:id="@+id/praise_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/praise_icon"
                            android:drawablePadding="@dimen/size_4dp"
                            android:textSize="@dimen/size_10dp"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_20dp"
                            android:drawableLeft="@mipmap/comments_icon"
                            android:drawablePadding="@dimen/size_4dp"
                            android:textSize="@dimen/size_10dp"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/attent_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_20dp"
                            android:drawableLeft="@mipmap/attent_no_icon"
                            android:drawablePadding="@dimen/size_4dp"
                            android:textSize="@dimen/size_10dp"
                            tools:text="0" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/praiser_list_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:paddingLeft="@dimen/size_14dp"
                        android:text="暂无点赞"
                        android:textColor="@color/color_262628"
                        android:textSize="@dimen/size_10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/praise_comment_attent_layout" />


                    <FrameLayout
                        android:id="@+id/comment_1_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16dp"
                        android:paddingLeft="@dimen/size_14dp"
                        app:layout_constraintTop_toBottomOf="@id/praiser_list_tv">

                        <include layout="@layout/view_comment_layout"></include>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/comment_2_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16dp"
                        android:paddingLeft="@dimen/size_14dp"
                        app:layout_constraintTop_toBottomOf="@id/comment_1_layout">

                        <include layout="@layout/view_comment_layout"></include>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/comment_open_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_14dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:text="查看更多>>"
                        android:textColor="@color/color_262628"
                        android:textSize="@dimen/size_12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/comment_2_layout" />
                </android.support.constraint.ConstraintLayout>


            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>


</FrameLayout>