<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/top_back_btn"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:background="@null"
            android:src="@mipmap/back_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1px"
            android:background="@color/line_DCDCDC"
            app:layout_constraintTop_toBottomOf="@id/top_back_btn"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingRight="@dimen/size_16dp"
            android:paddingBottom="@dimen/size_120dp"
            app:layout_constraintTop_toBottomOf="@id/top_line">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/one_coment_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </FrameLayout>

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_262628"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingRight="@dimen/size_16dp"
        android:paddingBottom="@dimen/size_10dp">

        <EditText
            android:id="@+id/comment_edit"
            android:layout_width="@dimen/size_300dp"
            android:layout_height="@dimen/size_40dp"
            android:background="@drawable/shape_gray_square_input_bg" />

        <Button
            android:id="@+id/comment_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送" />
    </LinearLayout>
</RelativeLayout>