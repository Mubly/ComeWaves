<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/size_16dp"
    android:paddingRight="@dimen/size_16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_32dp"
            android:text="评论"
            android:textSize="@dimen/size_14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sort_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_32dp"
            android:text="最热"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            app:layout_constraintTop_toBottomOf="@id/sort_type_tv">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/one_coment_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </FrameLayout>

    </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/size_10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/comment_edit"
                android:layout_width="@dimen/size_300dp"
                android:layout_height="@dimen/size_40dp"
                android:background="@drawable/shape_gray_square_radious_strok_10"
                android:text="开始" />
        </LinearLayout>
</FrameLayout>