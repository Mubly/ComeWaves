<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ReigsterActivity">

    <TextView
        android:id="@+id/register_over_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/size_32dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:text="完成"
        android:textSize="@dimen/size_14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size_100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3秒钟让我们更了解你"
            android:textSize="@dimen/size_30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:gravity="center"
            android:text="推荐更适合你的资讯"
            android:textSize="@dimen/size_22dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_70dp">

            <ImageView
                android:id="@+id/register_avtar_img"
                android:layout_width="@dimen/size_80dp"
                android:layout_height="@dimen/size_80dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/register_avtar_img_logo"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_gravity="center"
                android:src="@drawable/takephoto_icon" />
        </FrameLayout>


        <EditText
            android:id="@+id/register_user_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_40dp"
            android:background="@null"
            android:gravity="center_horizontal"
            android:hint="输入昵称"
            android:textSize="@dimen/size_22dp" />

        <RadioGroup
            android:id="@+id/sex_select_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/sex_of_man_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男" />

            <RadioButton
                android:id="@+id/sex_of_weman_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女" />
        </RadioGroup>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tag_flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                app:max_select="12"></com.zhy.view.flowlayout.TagFlowLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>