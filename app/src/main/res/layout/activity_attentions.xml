<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.AttentionsActivity">

    <include layout="@layout/view_top_layout"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/attention_tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        app:tabMode="fixed"
        app:layout_constraintTop_toBottomOf="@id/top_layout">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        app:layout_constraintTop_toBottomOf="@id/attention_tb"
        android:id="@+id/attention_viewpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>