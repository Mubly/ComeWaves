<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/size_20dp"
    android:paddingTop="@dimen/size_4dp"
    android:paddingRight="@dimen/size_4dp"
    android:paddingBottom="@dimen/size_4dp">

    <EditText
        android:id="@+id/input_et"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2dp"
        android:layout_weight="1"
        android:background="@drawable/shape_gray_square_input_bg"
        android:gravity="center_vertical"
        android:imeOptions="actionSend" />

    <ImageButton
        android:id="@+id/face_input_ib"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:background="@null"
        android:text="发送" />

    <ImageButton
        android:id="@+id/img_or_video_ib"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:background="@null"
        android:src="@drawable/img_video_input_logo"
        android:visibility="gone" />
</LinearLayout>
