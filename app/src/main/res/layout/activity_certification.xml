<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.activity.CertificationActivity">

    <include layout="@layout/view_top_layout"></include>

    <TextView
        android:id="@+id/store_enter_prompt_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_28dp"
        android:gravity="center"
        android:text="商家入驻"
        android:textColor="@color/text_555555"
        android:textSize="@dimen/size_14dp"
        app:layout_constraintTop_toBottomOf="@id/top_layout" />

    <TextView
        android:id="@+id/store_enter_prompt_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16dp"
        android:gravity="center"
        android:text="@string/enter_prompt2"
        android:textColor="@color/color_D72D63"
        android:textSize="@dimen/size_14dp"
        app:layout_constraintTop_toBottomOf="@id/store_enter_prompt_tv" />

    <FrameLayout
        android:id="@+id/enter_data_text_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/shape_enter_text_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/enter_data_text_layout_2"
        app:layout_constraintTop_toBottomOf="@id/store_enter_prompt_tv2">

        <ImageView
            android:layout_width="@dimen/size_58dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_24dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginBottom="@dimen/size_40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/size_16dp"
            android:text="投递资料"
            android:textSize="@dimen/size_16dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/enter_data_text_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/shape_enter_text_bg"
        app:layout_constraintLeft_toRightOf="@id/enter_data_text_layout_1"
        app:layout_constraintRight_toLeftOf="@id/enter_data_text_layout_3"
        app:layout_constraintTop_toBottomOf="@id/store_enter_prompt_tv2">

        <ImageView
            android:layout_width="@dimen/size_58dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_24dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginBottom="@dimen/size_40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/size_16dp"
            android:text="资料审核"
            android:textSize="@dimen/size_16dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/enter_data_text_layout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/shape_enter_text_bg"
        app:layout_constraintLeft_toRightOf="@id/enter_data_text_layout_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_enter_prompt_tv2">

        <ImageView
            android:layout_width="@dimen/size_58dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_24dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginBottom="@dimen/size_40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/size_16dp"
            android:text="签约协议"
            android:textSize="@dimen/size_16dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/enter_prompt_rule_look_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_26dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/enter_data_text_layout_3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看并下载"
            android:textColor="@color/color_4E628D"
            android:textSize="@dimen/size_12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《商家认证公函》"
            android:textColor="@color/color_D72D63"
            android:textSize="@dimen/size_12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enter_prompt_for_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_14dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/enter_prompt_rule_look_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入驻咨询热线:400-800-1234"
            android:textColor="@color/color_D72D63"
            android:textSize="@dimen/size_12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/store_enter_ack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_36dp"
        android:textColor="@color/white"
        android:text="立即入驻"
        android:background="@color/color_4E628D"
        android:textSize="@dimen/size_16dp"
        app:layout_constraintTop_toBottomOf="@id/enter_prompt_for_call" />
</android.support.constraint.ConstraintLayout>