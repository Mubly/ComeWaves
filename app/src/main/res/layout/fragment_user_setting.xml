<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.UserSettingFragment">

    <!--<ImageView-->
    <!--android:id="@+id/setting_bg"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:src="@drawable/start_img" />-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_20dp"
                android:text="账号与安全"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_20dp"
                android:text="用户认证"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14dp"
              />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_20dp"
                android:text="系统设置"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_20dp"
                android:text="帮助与反馈"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14dp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_20dp"
                android:text="关于来浪"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14dp"
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/login_out_btn"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginTop="@dimen/size_60dp"
            android:background="@color/color_f5f5f5"
            android:gravity="center"
            android:text="注销登录"
            android:textColor="@color/color_4E628D"
            android:textSize="@dimen/size_16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_layout" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>