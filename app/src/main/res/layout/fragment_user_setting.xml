<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.UserSettingFragment">

    <ImageView
        android:id="@+id/setting_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/start_img" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setting_bg_">
        <LinearLayout
            android:id="@+id/item_layout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:textColor="@color/color_f5f5f5"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_16dp"
                android:text="账号与安全"
                android:layout_height="@dimen/size_50dp" />
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:paddingLeft="@dimen/size_20dp"
                android:textColor="@color/color_f5f5f5"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_16dp"
                android:text="用户认证"
                android:layout_height="@dimen/size_50dp" />
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/size_20dp"
                android:textColor="@color/color_f5f5f5"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_16dp"
                android:text="系统设置"
                android:layout_height="@dimen/size_50dp" />
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/size_20dp"
                android:textColor="@color/color_f5f5f5"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_16dp"
                android:text="帮助与反馈"
                android:layout_height="@dimen/size_50dp" />
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/size_20dp"
                android:textColor="@color/color_f5f5f5"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_16dp"
                android:text="关于钉够"
                android:layout_height="@dimen/size_50dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/shape__white_square_radious_strok_10"
            app:layout_constraintTop_toBottomOf="@id/item_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_60dp"
            android:textColor="@color/color_f5f5f5"
            android:text="注销登录"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>