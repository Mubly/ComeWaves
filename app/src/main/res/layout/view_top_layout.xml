<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_32dp"
    tools:context=".view.activity.SettingActivity">


    <ImageButton
        android:id="@+id/top_back_btn"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_60dp"
        android:background="@null"
        android:padding="@dimen/size_10dp"
        android:src="@drawable/back_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/top_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="编辑个人资料" />

    <TextView
        android:id="@+id/top_layout_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:padding="@dimen/size_16dp"
        android:textSize="@dimen/size_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_marginTop="@dimen/size_4dp"
        android:background="@color/line_C0BFBF"
        app:layout_constraintBottom_toBottomOf="parent">

    </View>

</android.support.constraint.ConstraintLayout>
