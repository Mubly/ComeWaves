<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bottom_tabbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48dp"
    android:background="@drawable/layout_bottom_border"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="1dp"
    android:paddingBottom="@dimen/size_2dp">

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:onClick="onTabClicked"
        android:orientation="vertical"
        android:tag="1">

        <ImageView
            android:id="@+id/iv_tabbar_home_icon"
            android:layout_width="@dimen/size_26dp"
            android:layout_height="@dimen/size_26dp"
            android:background="@mipmap/home_icon"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_tabbar_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="首页"
            android:textSize="@dimen/size_12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_live"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:onClick="onTabClicked"
        android:orientation="vertical"
        android:tag="1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_tabbar_live_icon"
            android:layout_width="@dimen/size_22dp"
            android:layout_height="@dimen/size_22dp"
            android:background="@mipmap/search_icon"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_tabbar_live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="搜索"
            android:textSize="@dimen/size_12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_release"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:onClick="onTabClicked"
        android:orientation="vertical"
        android:tag="2">

        <ImageView
            android:id="@+id/iv_tabbar_discover_icon"
            android:layout_width="@dimen/size_22dp"
            android:layout_height="@dimen/size_22dp"
            android:background="@mipmap/relase_bg"
            android:scaleType="fitCenter"
            android:padding="@dimen/size_4dp"
            android:src="@mipmap/relase_icon" />

        <TextView
            android:id="@+id/tv_tabbar_discover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="发布"
            android:textSize="@dimen/size_12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:onClick="onTabClicked"
        android:orientation="vertical"
        android:tag="3">

        <ImageView
            android:id="@+id/iv_tabbar_explore_icon"
            android:layout_width="@dimen/size_22dp"
            android:layout_height="@dimen/size_22dp"
            android:background="@mipmap/ishad_icon"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_tabbar_explore_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="有吗"
            android:textSize="@dimen/size_12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:onClick="onTabClicked"
        android:orientation="vertical"
        android:tag="4">

        <ImageView
            android:id="@+id/iv_tabbar_me_icon"
            android:layout_width="@dimen/size_22dp"
            android:layout_height="@dimen/size_22dp"
            android:background="@mipmap/mine_icon"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_tabbar_me_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="@string/tab_me"
            android:textSize="@dimen/size_12dp" />
    </LinearLayout>

</LinearLayout>
