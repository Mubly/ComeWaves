<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.HomeFragment">

    <ImageView
        android:id="@+id/make_photo_message"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_90dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:src="@mipmap/photo_message_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/make_video_message"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="@id/make_photo_message"
        app:layout_constraintLeft_toLeftOf="@id/make_photo_message"
        app:layout_constraintTop_toBottomOf="@id/make_photo_message"
        android:layout_marginTop="@dimen/size_10dp"
        android:text="发布图文"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/make_video_message"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_90dp"
        android:layout_marginLeft="@dimen/size_30dp"
        android:src="@mipmap/video_messige_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/make_photo_message"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="@id/make_video_message"
        app:layout_constraintLeft_toLeftOf="@id/make_video_message"
        app:layout_constraintTop_toBottomOf="@id/make_video_message"
        android:layout_marginTop="@dimen/size_10dp"
        android:text="发布视频"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>